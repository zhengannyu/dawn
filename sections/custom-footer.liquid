{%- style -%}

  .custom-footer {
    margin: 60px 20px 20px;
    padding: 40px 50px;
    display: flex;
    min-height: 260px;
    position: relative;
    border-radius: 50px;
    background-color: #373433;
    color: #FFF;
    @media screen and (max-width: 740px) {
      flex-flow: column;
      justify-content: center;
      min-height: auto;
      padding: 20px;
      border-radius: 20px;
    }
  }
  .custom-footer-logo {
    width: 30%;
    list-style-type: none;
    padding: 0 20px;
    @media screen and (max-width: 740px) {
      display: flex;
      flex-flow: column;
      align-items: center;
      width: 100%;
      padding: 0 0 10px;
      p {
        color: white !important;
        margin: 4px 0;
        text-align: center;
      }
    }
  }
  .custom-footer-menu {
    flex: 1;
    list-style-type: none;
    padding: 0;
    margin: 0;
    a {
      color: #FFF;
      text-decoration: none;
      :hover {
        color: dark(20);
      }
    }
  }
  .custom-footer-btn {
    flex: 5;
    display: flex;
    flex-flow: column;
    justify-content: space-between;
    align-items: flex-end;
    .btn {
      background-color: #CDDE00;
      color: #373433;
      padding: 20px 80px;
      text-align: center;
      border-radius: 50px;
      max-width: 500px;
      display: inline-block;
      text-decoration: none;
      @media screen and (max-width: 740px) {
        padding: 20px;
        font-size: 14px;
        width: 100%;
      }
    }
  }
  .copyright-box {
    position: absolute;
    bottom: 20px;
    right: 50px;
    font-size: 14px;
    color: #FFF;
    @media screen and (max-width: 740px) {
      font-size: 12px;
      margin: 20px 0 0;
      position: static;
      flex-flow: row;
      flex-wrap: wrap;
    }
    a {
      padding: 0 8px;
      color: inherit !important;
      text-decoration: none;
      :hover {
        color: dark(20);
      }

    }
    a.opacity-60 {
      color: #ffffff7a;
    }
    div {
      margin-left: 20px;
      @media screen and (max-width: 740px) {
        margin-left: 0;
        padding: 0 8px;
      }
    }
  }

{%- endstyle -%}
