{%- style -%}

  .custom-footer{
    display:flex;
    background-color:#373433;
    border-radius: 50px;
    padding: 40px 50px;
    margin: 60px 20px 20px;
    color:#FFF;
    min-height:260px;
    position:relative;
  }
  .custom-footer-logo{
    flex:1.4;
    list-style-type: none;
    padding:0 20px;
  }
  .custom-footer-menu{
    flex:1;
    list-style-type: none;
    padding:0 20px;
    padding: 0; 
    margin: 0;
    li{
      padding:0 0 12px 0;
    }
    a{
      color:#FFF;
      text-decoration: none;
      :hover{
        color:dark(20);
      }
    }
  }
  .custom-footer-btn{
    flex:5;
    display:flex;
    flex-flow:column;
    justify-content: space-between;
    align-items: flex-end;
    .btn{
      background-color:#CDDE00;
      color:#373433;
      padding:20px 80px;
      text-align: center;
      border-radius: 50px;
      max-width:500px;
      display:inline-block;
      text-decoration: none;
    }
}
    .copyright-box{
      display:flex;
      flex-flow:row;
      position: absolute;
      bottom:20px;
      right:50px;
      font-size:14px;
      a{
        padding:0 8px;
        color:#FFF;
        text-decoration: none;
        :hover{
          color:dark(20);
        }
      }
      a.opacity-60{
        color:#ffffff7a;
      }
      div{
        margin-left:20px;
      }
    }

{%- endstyle -%}
<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="section-{{ section.id }}-padding">
    <div class="custom-footer">
      <div class="custom-footer-logo">
        {{ images['logo-white.png'] | image_url: width: 180 | image_tag }}
      </div>
      <ul class="custom-footer-menu">
        <li>
          <a href="https://anyu-hydrogen.myshopify.com/pages/about">About</a>
        </li>
        <li>
          <a href="https://anyu-hydrogen.myshopify.com/pages/products">Product</a>
        </li>
        <li>
          <a href="https://anyu-hydrogen.myshopify.com/pages/materials">Materials</a>
        </li>
      </ul>
      <ul class="custom-footer-menu">
        <li>
          <a href="https://anyu-hydrogen.myshopify.com/pages/services">Services</a>
        </li>
        <li>
          <a href="https://anyu-hydrogen.myshopify.com/pages/contact">Contact Us</a>
        </li>
      </ul>
      <div class="custom-footer-btn">
        <a class="btn" href="https://anyu-hydrogen.myshopify.com/pages/contact">有任何需求與問題，歡迎您與我們聯繫</a>
      </div>
      <div class="copyright-box">
          <a href="" class="opacity-60">Privacy Policy</a>
          <a href="" class="opacity-60">Terms and Conditions</a>
          <div>© 2023 AXON ALL RIGHTS RESERVED. </div>
          <div>網站建置<a href="http://anyustudio.com">anyustudio</a> </div>
        </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.custom-liquid.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "liquid",
      "id": "custom_liquid",
      "label": "t:sections.custom-liquid.settings.custom_liquid.label",
      "info": "t:sections.custom-liquid.settings.custom_liquid.info"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "t:sections.custom-liquid.presets.name"
    }
  ]
}
{% endschema %}
